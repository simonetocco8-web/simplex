<div class="kint-trace">
		<ol class="trace">
		<?php foreach ($output as $i => $step): ?>
			<li>
				<p>
					<span class="file">
						<?php if ($step['file']): ?>
							<a href="#"><?php echo call_user_func( self::$pathDisplayCallback, $step['file'], $step['line'] )?></a>
						<?php else: ?>
							PHP internal call
						<?php endif ?>
					</span>
					&raquo;
					<?php echo $step['function']?>(<?php if ($step['args']):?><a href="#" class="kint-args">arguments</a><?php endif ?>)
				</p>
				<?php if ( $step['args'] ): ?>
				<div class="kint-hidden kint-args">
					<table cellspacing="0">
					<?php foreach ($step['args'] as $name => $arg): ?>
						<tr>
							<td><code><?php echo $name ?></code></td>
							<td><pre><?php s($arg) ?></pre></td>
						</tr>
					<?php endforeach ?>
					</table>
				</div>
				<?php endif ?>
				<?php if ( $step['file'] ): ?>
					<div class="kint-hidden kint-source"><?php echo $step['source'] ?></div>
				<?php endif ?>
			</li>
		<?php endforeach ?>
		</ol>
</div>

